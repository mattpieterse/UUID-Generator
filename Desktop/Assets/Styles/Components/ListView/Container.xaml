<ResourceDictionary
    xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml" >
    <Style
        TargetType = "ListView" >
        <Setter
            Property = "Template" >
            <Setter.Value>
                <ControlTemplate
                    TargetType = "{x:Type ListView}" >
                    <Border
                        Name = "Comp"
                        Padding = "5"
                        Background = "#FAFAFA"
                        BorderBrush = "#E8E8E8"
                        BorderThickness = "1"
                        CornerRadius = "4"
                        SnapsToDevicePixels = "true" >
                        <ScrollViewer>
                            <ItemsPresenter />
                        </ScrollViewer>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>