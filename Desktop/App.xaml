    xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
    StartupUri = "/MVVM/Views/HomeWindow.xaml"
    ShutdownMode = "OnMainWindowClose" >

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source = "Assets/Styles/Variables/Colors.xaml" />
                <ResourceDictionary
                    Source = "Assets/Styles/Components/Actions/Accent.xaml" />
                <ResourceDictionary
                    Source = "Assets/Styles/Components/Actions/Standard.xaml" />
                <ResourceDictionary
                    Source = "Assets/Styles/Components/ListView/Container.xaml" />
                <ResourceDictionary
                    Source = "Assets/Styles/Components/ListView/Item.xaml" />
                <ResourceDictionary
                    Source = "Assets/Styles/Components/TextBox/Standard.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>